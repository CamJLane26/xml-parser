{
  "name": "xml-parser",
  "version": "1.0.0",
  "description": "Express microservice for parsing XML files with streaming support",
  "main": "build/server.js",
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p build/public && cp -r src/public/* build/public/",
    "start": "node --max-old-space-size=${NODE_HEAP_SIZE:-4096} --expose-gc build/server.js",
    "dev": "node --max-old-space-size=${NODE_HEAP_SIZE:-4096} --expose-gc -r ts-node/register src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "generate-xml": "ts-node sandbox/generateXml.ts",
    "convert-xsd": "ts-node src/tools/xsdConverter.ts"
  },
  "keywords": [
    "xml",
    "parser",
    "express",
    "streaming"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/async": "^3.2.25",
    "async": "^3.2.6",
    "express": "4.21.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "sax": "^1.3.0"
  },
  "devDependencies": {
    "@types/express": "5.0.3",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.10",
    "@types/pg": "^8.10.9",
    "@types/sax": "^1.2.7",
    "@types/supertest": "^2.0.16",
    "@types/xmldom": "^0.1.34",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "xmldom": "^0.6.0",
    "xpath": "^0.0.33"
  }
}
